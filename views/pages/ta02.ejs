<!DOCTYPE html>
<html>

<head>
  <% include ../includes/header.ejs %>
</head>

<body>
  <% include ../includes/nav.ejs %>
    <div class="jumbotron text-center">
      <div class="container">
        <h1>
          <%= title %>
        </h1>
        <p>This is the placeholder for Team Activity 02</p>
      </div>
    </div>
    <div class="container">
      <form action="/ta02/addUser" method="POST">
        <input type="text" name="user">
        <button type="submit">Add User</button>
      </form>
      <form action="/ta02/removeUser" method="POST">
        <input type="text" name="remUser">
        <button type="submit">Remove User</button>
      </form>
      <% if (userNoExist) { %>
        <div>That user does not exist</div>
      <% } %>
      <% if (isDuplicateUser) { %>
        <div>That user already exists</div>
      <% } %>
      <div class="userList">
        <% if (usernames.length > 0) { %>
          <ul>
            <% for (let user of usernames) { %>
              <li><%= user %></li>
            <% } %>
          </ul>
        <% } %>
      </div>
    </div>
    

</body>

</html>